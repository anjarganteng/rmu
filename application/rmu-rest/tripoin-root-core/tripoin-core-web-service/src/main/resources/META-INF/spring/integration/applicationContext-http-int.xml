<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/integration http://www.springframework.org/schema/integration/spring-integration.xsd		
		http://www.springframework.org/schema/integration/http http://www.springframework.org/schema/integration/http/spring-integration-http.xsd	
        http://www.springframework.org/schema/oxm http://www.springframework.org/schema/oxm/spring-oxm-3.0.xsd"
	xmlns:int="http://www.springframework.org/schema/integration"
	xmlns:oxm="http://www.springframework.org/schema/oxm" 
	xmlns:int-http="http://www.springframework.org/schema/integration/http">
	
	<int:annotation-config/>
	
	<!-- handler mapping implementation that is aware of inbound Spring Integration 
			http inbound gateway's and inbound adapter's with "path" attributes -->
	<bean class="org.springframework.integration.http.inbound.UriPathHandlerMapping"/>
	
	<!-- Inbound/Outbound Channels -->
	<int:channel id="carriageRequest" />
	<int:channel id="carriageResponse" />
	<int:channel id="seatRequest" />
	<int:channel id="seatResponse" />	
	<int:channel id="trainRequest" />
	<int:channel id="trainResponse" />	
	<int:channel id="menuRequest" />
	<int:channel id="menuResponse" />
	<int:channel id="loginRequest" />
	<int:channel id="loginResponse" />	
	<int:channel id="orderHeaderRequest" />
	<int:channel id="orderHeaderResponse" />
			
	<int-http:inbound-gateway id="inboundLoginRequestGateway"		
		supported-methods="GET, POST" 
		request-channel="loginRequest"
		reply-channel="loginResponse"		
		mapped-response-headers="Return-Status, Return-Status-Msg, HTTP_RESPONSE_HEADERS"		
		view-name="/login" 
		path="/wscontext/login"
		reply-timeout="50000">
		
	</int-http:inbound-gateway>
	
	<int-http:inbound-gateway id="inboundOrderHeaderRequestGateway"		
		supported-methods="GET, POST" 
		request-channel="orderHeaderRequest"
		reply-channel="orderHeaderResponse"		
		mapped-response-headers="Return-Status, Return-Status-Msg, HTTP_RESPONSE_HEADERS"		
		view-name="/orderHeader" 
		path="/wscontext/orderHeader"
		reply-timeout="50000">
		
	</int-http:inbound-gateway>
			
	<int-http:inbound-gateway id="inboundCarriageRequestGateway"		
		supported-methods="GET, POST" 
		request-channel="carriageRequest"
		reply-channel="carriageResponse"		
		mapped-response-headers="Return-Status, Return-Status-Msg, HTTP_RESPONSE_HEADERS"		
		view-name="/carriage" 
		path="/wscontext/carriage"
		reply-timeout="50000">
		
	</int-http:inbound-gateway>
	
	<int-http:inbound-gateway id="inboundSeatRequestGateway"		
		supported-methods="GET, POST" 
		request-channel="seatRequest"
		reply-channel="seatResponse"		
		mapped-response-headers="Return-Status, Return-Status-Msg, HTTP_RESPONSE_HEADERS"		
		view-name="/seat" 
		path="/wscontext/seat"
		reply-timeout="50000">
		
	</int-http:inbound-gateway>
	
	<int-http:inbound-gateway id="inboundTrainRequestGateway"		
		supported-methods="GET, POST" 
		request-channel="trainRequest"
		reply-channel="trainResponse"		
		mapped-response-headers="Return-Status, Return-Status-Msg, HTTP_RESPONSE_HEADERS"		
		view-name="/train" 
		path="/wscontext/train"
		reply-timeout="50000">
		
	</int-http:inbound-gateway>
	
	<int-http:inbound-gateway id="inboundMenuRequestGateway"		
		supported-methods="GET, POST" 
		request-channel="menuRequest"
		reply-channel="menuResponse"		
		mapped-response-headers="Return-Status, Return-Status-Msg, HTTP_RESPONSE_HEADERS"		
		view-name="/menu" 
		path="/wscontext/menu"
		reply-timeout="50000">
		
	</int-http:inbound-gateway>
	
 
	<!-- Note: The default parameter name for favorParameter is 'format'. For instance, when this flag is true, a request for /services/employee/{id}/search?format=json will result 
			in an MappingJacksonJsonView being resolved, while the Accept header can be the browser-defined text/html,application/xhtml+xml  -->
			
	<bean class="org.springframework.web.servlet.view.ContentNegotiatingViewResolver">
		<property name="order" value="1" />	
		<property name="defaultContentType" value="application/xml"/>
		<property name="favorParameter" value="true"/>	
		<property name="ignoreAcceptHeader" value="true" />		
		<property name="mediaTypes">
			<map>
				<entry key="json" value="application/json" />
				<entry key="xml" value="application/xml" />				
			</map>
		</property>
		<property name="defaultViews">
			<list>
				<bean class="com.tripoin.core.rest.json.view.ExtendedMappingJacksonJsonView" >
					<property name="objectMapper" ref="jaxbJacksonObjectMapper"/>
				</bean>	
				<bean class="org.springframework.web.servlet.view.xml.MarshallingView">
					<constructor-arg ref="marshaller"/>					
				</bean>				
			</list>
		</property>				
	</bean>
	
	<oxm:jaxb2-marshaller id="marshaller" contextPath="com.tripoin.core.domain" />
	
	<int:service-activator id="loginServiceActivator" 
					input-channel="loginRequest"
					output-channel="loginResponse" 
					ref="loginManager" 
					method="getLogin" 
					requires-reply="true"  
					send-timeout="60000"/>
					
	<int:service-activator id="orderHeaderServiceActivator" 
					input-channel="orderHeaderRequest"
					output-channel="orderHeaderResponse" 
					ref="orderHeaderManager" 
					method="getOrderHeaders" 
					requires-reply="true"  
					send-timeout="60000"/>
					
	<int:service-activator id="carriageServiceActivator" 
					input-channel="carriageRequest"
					output-channel="carriageResponse" 
					ref="carriageManager" 
					method="getCarriages" 
					requires-reply="true"  
					send-timeout="60000"/>
					
	<int:service-activator id="seatServiceActivator" 
					input-channel="seatRequest"
					output-channel="seatResponse" 
					ref="seatManager" 
					method="getSeats" 
					requires-reply="true"  
					send-timeout="60000"/>
					
	<int:service-activator id="trainServiceActivator" 
					input-channel="trainRequest"
					output-channel="trainResponse" 
					ref="trainManager" 
					method="getTrains" 
					requires-reply="true"  
					send-timeout="60000"/>
					
	<int:service-activator id="menuServiceActivator" 
					input-channel="menuRequest"
					output-channel="menuResponse" 
					ref="menuManager" 
					method="getMenus" 
					requires-reply="true"  
					send-timeout="60000"/>
	
	<bean id="jaxbJacksonObjectMapper" class="com.tripoin.core.rest.json.JaxbJacksonObjectMapper"/>				

</beans>	